{
  "manifest_version": 2,
  "name": "DarkMode Toggle",
  "version": "1.0.0",
  "description": "Toggle dark theme",
  "short_name": "DarkMode Toggle",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["background.css"],
      "js": ["background.js"]
    }
  ],

  "page_action": {
    "default_icon": {
      "16": "icons/full-moon.png"
    }
  }
}
